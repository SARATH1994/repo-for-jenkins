  
pipeline {
    agent { 
      docker 
        {
           image 'maven:alpine-new' 
           args '-v maven-repo:/root/.m2'
           }
           
            }
    stages {
        stage('Example Build') {
            steps {
                
                sh 'mvn sonar:sonar -Dsonar.host.url=http://13.234.112.119:8081'
                sh 'mvn clean install'
                sh 'mvn clean deploy'
            }
        }
    }
}
