pipeline {
    agent { 
      docker 
        {
           image 'maven:alpine' 
           args '-v maven-repo:/root/.m2/'
          
           }
           
            }
    stages {
        stage('Example Build') {
            steps {
                
                sh 'mvn sonar:sonar -Dsonar.host.url=http://13.234.226.161:8081'
             
             sh 'mvn clean install'
                sh 'mvn -X clean deploy'
            }
        }
    }
}
